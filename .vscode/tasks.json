{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Run C++",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-O2",
        "-Wall",
        "${file}",
        "-o",
        "${fileDirname}/temp.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compile C++"
    },
    {
      "label": "Run and Delete Executable",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "${fileDirname}\\${fileBasenameNoExtension}.exe && del ${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "dependsOn": "Build C++",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
